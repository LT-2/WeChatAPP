/* pages/square/square.wxss */
@import "/pages/botton_menu/botton_menu";

page{
  background-color: #EFEFEF;
}

.scbg{
  background-color: #EFEFEF;
  width: 100%;
  /* height: 91%; */
  left: 0rpx;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}

.box{
  width: 100%;
  background-color: white;
  padding-top: 30rpx;
  border-bottom: 20rpx solid #EFEFEF;
}

.firstblock{
  width: 92%;
  height: 150rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.touxiang{
  width: 130rpx;
  height: 130rpx;
}

.person{
  width: 75%;
  height: 130rpx;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.name{
  display: flex;
  justify-content: flex-start;  /*左对齐*/
  margin-top: 10rpx;
  font-size: 40rpx;
  flex-direction: row;
}

.time{
  display: flex;
  justify-content: flex-start;
  margin-top: 35rpx;
  flex-direction: row; /*并列排布*/
}


.showname{
  font-size: 34rpx;
  color: #3F51B5;
  font-family: PingFangSC-regular; /*字体*/
  font-weight: bold;
}

.showtime{
  font-size: 25rpx;
  color: #5E5D5D;
  font-family: PingFangSC-regular; 
}

.secondblock{
  margin-top: 10rpx;
  margin-left: 4%;
  margin-right: 4%;
  padding-bottom: 20rpx;
  border-bottom: 5rpx solid #BBBBBB;
}

.content{
  font-size: 29rpx;
  color: #101010;
  word-break: break-all; /*英文字母换行*/
}

.thirdblock{
  height: 100rpx;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  justify-content: flex-start;
}


.like{
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.num{
  height: 52rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
  color: #101010;
}